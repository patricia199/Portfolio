function inputNumber(inputId){

    return Number(document.getElementById(inputId).value);
    
}

var cacheRoom = inputNumber("room_cacheTip");
var tipRoom = inputNumber("room_Tip");


function imprimeValor(cacheRoom){
    
            if(cacheRoom == 0){
                cacheRoom = 100;
                document.getElementById("room_Cache").innerText = cacheRoom;
            }else if (cacheRoom == 1){
                cacheRoom = 120;
                document.getElementById("room_Cache").innerText = cacheRoom;
            }else if (cacheRoom == 2){
                cacheRoom = 150;
                document.getElementById("room_Cache").innerText = cacheRoom;
            }return;
    
    }

function tipoHabita (tipRoom){
    
      var tipoHabitacion= imprimeValor(cacheRoom);  
            if(tipRoom == 3){
                tipRoom = (tipoHabitacion  * 75) / 100 ;
                document.getElementById("Tip_room").innerText = tipRoom;
            }else if (tipRoom == 4){
                tipRoom = (tipoHabitacion) + 0;
                document.getElementById("Tip_room").innerText = tipRoom;
            }else if (tipRoom == 5){
                tipRoom = (tipoHabitacion * 1.25);
                document.getElementById("Tip_room").innerText = tipRoom;
            }
        
        }




document.getElementById("full_bill").addEventListener("click",tipoHabita);
